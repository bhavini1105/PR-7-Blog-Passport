         <!-- banner section end --> 
      </div>

      <div class="container-fluid">
         <div class="album py-5 bg-body-tertiary">
            <div class="container">
              <div class="row justify-content-center g-3 mt-4">
                <% blogs.forEach((blog) => { %>
                    <div class="col-md-4 d-flex justify-content-center"> 
                        <div class="card shadow-sm" style="width: 300px;"> 
                          <img src="<%= blog.imgurl %>" alt="<%= blog.title %>" style="width: 100%; height: 200px;">
                          <div class="card-body">
                            <h4 class="card-text"><%= blog.title %></h4>
                            <p class="card-text"><%= blog.content %></p>
                            <div class="d-flex justify-content-between align-items-center">
                              <div class="btn-group">
                                <a href="/viewBlog/<%= blog.id %>" class="btn btn-sm btn-outline-secondary">View</a>
                                <a href="/editBlog/<%= blog.id %>" class="btn btn-sm btn-outline-warning">Edit</a>
                                <a href="/deleteBlog/<%= blog.id %>" class="btn btn-sm btn-outline-danger">Delete</a>
                              </div>
                              <small class="text-body-secondary">9 mins</small>
                            </div>
                          </div>
                        </div>
                      </div>
                <% }) %>
              </div>
            </div>
        </div>
      </div>

      <!-- footer section start -->
      <%- include('./partials/footer') %>